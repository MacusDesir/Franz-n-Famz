<link rel="stylesheet" href="clear3.css">
<link rel="stylesheet" href="product.css">

<body>

<nav>
    <div class="nav-wrapper">
      <form>
        <div class="input-field">
          <input id="search" type="search" required>
          <label class="label-icon" for="search"><i class="material-icons">search</i></label>
          <i class="material-icons">close</i>
        </div>
      </form>
    </div>
  </nav>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<div class="listings">
  <tbody>
    <% @products.each do |product| %>
      <ul>
        <li>
          <img src="http://via.placeholder.com/100x100" />
          <h3><%= product.name %></h3>
          <p><%= product.description %> Price: $<%= product.formatted_price %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </li>
      </ul>
      <% end %>
  </tbody>
</div>
<%= link_to 'New Product', new_product_path %>
</body>
